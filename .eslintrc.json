{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true,
        "jest": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 4],
        "import/extensions": ["error", "ignorePackages"],
        "no-console": "off",
        "no-underscore-dangle": "off",
        "operator-linebreak": "off",
        "object-curly-newline": "off"
    }
}
